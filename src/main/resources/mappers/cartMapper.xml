<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper

    PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">    

<mapper namespace="com.park.mall.cart">

		<insert id="cartInsert"   parameterType="java.util.List">
					 INSERT INTO cart(product_id,product_name,product_price,product_desc,product_url,product_amount,product_userId)
										VALUES<foreach item="item" collection="list" separator=",">
											  (
												  #{item.product_id}
												, #{item.product_name}
												, #{item.product_price}
								                , #{item.product_desc}
												, #{item.product_url}
								                , #{item.product_amount}
								                , #{item.product_userId}
											)
										</foreach>
										</insert>
		
		<select id="selectTbl_ProductIdCall" resultType="com.park.mall.model.CartVO">
			SELECT *FROM tbl_product WHERE product_id = #{product_id}
		</select>
		
</mapper>